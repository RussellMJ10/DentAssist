@model DentAssistProyect.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i> Iniciar sesión</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">


                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small text-muted mb-1">CORREO ELECTRÓNICO</label>
                        <div class="position-relative icon-input">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="Email" class="form-control ps-5" autocomplete="username" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label small text-muted mb-1">CONTRASEÑA</label>
                        <div class="position-relative icon-input">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Password" type="password" class="form-control ps-5" autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
                        <label class="form-check-label" for="RememberMe">Recordarme</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="fas fa-sign-in-alt me-2"></i> Iniciar sesión
                    </button>

                    <div class="mt-3 d-flex justify-content-between">
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none small">
                            <i class="fas fa-key me-1"></i> Olvidé mi contraseña
                        </a>
                        <a asp-action="Register" asp-controller="Account" class="text-decoration-none small">
                            <i class="fas fa-user-plus me-1"></i> Registrarse
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>