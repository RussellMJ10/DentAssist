@model DentAssistProyect.Models.Entities.Paciente

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white"><i class="fas fa-user-injured me-2"></i>Detalles del Paciente</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="w-25 bg-light">@Html.DisplayNameFor(model => model.Nombre)</th>
                                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Rut)</th>
                                    <td>@Html.DisplayFor(model => model.Rut)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Telefono)</th>
                                    <td>
                                        <a href="tel:@Model.Telefono" class="text-decoration-none">
                                            <i class="fas fa-phone me-2"></i>@Html.DisplayFor(model => model.Telefono)
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Email)</th>
                                    <td>
                                        <a href="mailto:@Model.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope me-2"></i>@Html.DisplayFor(model => model.Email)
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Direccion)</th>
                                    <td>
                                        <i class="fas fa-map-marker-alt me-2"></i>@Html.DisplayFor(model => model.Direccion)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>