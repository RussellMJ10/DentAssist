@model DentAssistProyect.Models.Entities.PasoPlan

@{
    ViewData["Title"] = "Eliminar Paso del Plan";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white"><i class="fas fa-trash-alt me-2"></i>Confirmar Eliminación</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>¿Está seguro que desea eliminar este paso?</h5>
                        <p class="mb-0">Esta acción no se puede deshacer y eliminará permanentemente este paso del plan de tratamiento.</p>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="w-25 bg-light">@Html.DisplayNameFor(model => model.Orden)</th>
                                    <td>@Html.DisplayFor(model => model.Orden)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Descripcion)</th>
                                    <td>@Html.DisplayFor(model => model.Descripcion)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.FechaEstimada)</th>
                                    <td>@Html.DisplayFor(model => model.FechaEstimada)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">@Html.DisplayNameFor(model => model.Estado)</th>
                                    <td>@Html.DisplayFor(model => model.Estado)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Plan de Tratamiento</th>
                                    <td>@Html.DisplayFor(model => model.PlanTratamiento.Id)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Tratamiento</th>
                                    <td>@Html.DisplayFor(model => model.Tratamiento.Nombre)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fas fa-trash-alt me-2"></i>Confirmar Eliminación
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>