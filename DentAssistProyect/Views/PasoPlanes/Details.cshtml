@model DentAssistProyect.Models.Entities.PasoPlan

@{
    ViewData["Title"] = "Detalles del Paso del Plan";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white"><i class="fas fa-list-ol me-2"></i>Detalles del Paso del Plan</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Columna 1: Información del Paso -->
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0 text-white"><i class="fas fa-info-circle me-2"></i>Paso del Plan</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Orden:</dt>
                                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Orden)</dd>

                                        <dt class="col-sm-5">Descripción:</dt>
                                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Descripcion)</dd>

                                        <dt class="col-sm-5">Fecha Estimada:</dt>
                                        <dd class="col-sm-7">@(Model.FechaEstimada?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                                        <dt class="col-sm-5">Estado:</dt>
                                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Estado)</dd>

                                        <dt class="col-sm-5">Tratamiento:</dt>
                                        <dd class="col-sm-7">@(Model.Tratamiento?.Nombre ?? "N/A")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Columna 2: Información del Plan -->
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0 text-white"><i class="fas fa-clipboard-list me-2"></i>Plan de Tratamiento</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">ID Plan:</dt>
                                        <dd class="col-sm-7">@Model.PlanTratamiento.Id</dd>

                                        <dt class="col-sm-5">Fecha Creación:</dt>
                                        <dd class="col-sm-7">@Model.PlanTratamiento.FechaCreacion.ToShortDateString()</dd>

                                        <dt class="col-sm-5">Observaciones:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Observaciones ?? "N/A")</dd>

                                        <dt class="col-sm-5">Paciente:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Paciente?.Nombre ?? "N/A")</dd>

                                        <dt class="col-sm-5">RUT Paciente:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Paciente?.Rut ?? "N/A")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Columna 3: Información del Odontólogo -->
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0 text-white"><i class="fas fa-user-md me-2"></i>Odontólogo</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Nombre:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Odontologo?.Nombre ?? "N/A")</dd>

                                        <dt class="col-sm-5">Matrícula:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Odontologo?.Matricula ?? "N/A")</dd>

                                        <dt class="col-sm-5">Especialidad:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Odontologo?.Especialidad ?? "N/A")</dd>

                                        <dt class="col-sm-5">Email:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Odontologo?.Email ?? "N/A")</dd>

                                        <dt class="col-sm-5">Teléfono Paciente:</dt>
                                        <dd class="col-sm-7">@(Model.PlanTratamiento.Paciente?.Telefono ?? "N/A")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-2"></i>Volver al Listado
                            </a>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-2"></i>Editar
                            </a>
                            <a asp-action="ExportarPdf" asp-route-id="@Model.Id" class="btn btn-primary" target="_blank">
                                <i class="fas fa-file-pdf me-2"></i>Descargar PDF
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>