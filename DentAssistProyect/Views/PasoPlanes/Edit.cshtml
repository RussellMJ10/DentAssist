@model DentAssistProyect.Models.Entities.PasoPlan

@{
    ViewData["Title"] = "Editar Paso del Plan";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-tasks me-2"></i>Editar Paso del Plan</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Orden" class="form-label">
                                        <i class="fas fa-sort-numeric-up me-2"></i>Orden
                                    </label>
                                    <input asp-for="Orden" class="form-control" />
                                    <span asp-validation-for="Orden" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaEstimada" class="form-label">
                                        <i class="far fa-calendar-alt me-2"></i>Fecha Estimada
                                    </label>
                                    <input asp-for="FechaEstimada" type="date" class="form-control" />
                                    <span asp-validation-for="FechaEstimada" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="form-label">
                                        <i class="fas fa-align-left me-2"></i>Descripción
                                    </label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Estado" class="form-label">
                                        <i class="fas fa-info-circle me-2"></i>Estado
                                    </label>
                                    <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estado"></select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PlanTratamientoId" class="form-label">
                                        <i class="fas fa-file-medical me-2"></i>Plan de Tratamiento
                                    </label>
                                    <select asp-for="PlanTratamientoId" class="form-select" asp-items="ViewBag.PlanTratamientoId"></select>
                                    <span asp-validation-for="PlanTratamientoId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TratamientoId" class="form-label">
                                        <i class="fas fa-teeth me-2"></i>Tratamiento
                                    </label>
                                    <select asp-for="TratamientoId" class="form-select" asp-items="ViewBag.TratamientoId"></select>
                                    <span asp-validation-for="TratamientoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}