@model DentAssistProyect.Models.Entities.Tratamiento

@{
    ViewData["Title"] = "Detalles del Tratamiento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white"><i class="fas fa-teeth me-2"></i>Detalles del Tratamiento</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="w-25 bg-light"><i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(model => model.Nombre)</th>
                                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fas fa-align-left me-2"></i>@Html.DisplayNameFor(model => model.Descripcion)</th>
                                    <td>@Html.DisplayFor(model => model.Descripcion)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.PrecioEstimado)</th>
                                    <td>@Model.PrecioEstimado.ToString("C")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>