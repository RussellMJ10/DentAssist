@model DentAssistProyect.Models.Entities.Turno

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white"><i class="fas fa-calendar-edit me-2"></i>Editar Turno</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FechaHora" class="form-label">
                                        <i class="far fa-calendar-alt me-2"></i>Fecha y Hora
                                    </label>
                                    <input asp-for="FechaHora" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DuracionMinutos" class="form-label">
                                        <i class="fas fa-clock me-2"></i>Duración (minutos)
                                    </label>
                                    <input asp-for="DuracionMinutos" type="number" class="form-control" />
                                    <span asp-validation-for="DuracionMinutos" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Estado" class="form-label">
                                        <i class="fas fa-info-circle me-2"></i>Estado
                                    </label>
                                    <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estado">
                                        <option value="">Seleccione estado</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="PacienteId" class="form-label">
                                        <i class="fas fa-user-injured me-2"></i>Paciente
                                    </label>
                                    <select asp-for="PacienteId" class="form-select" asp-items="ViewBag.PacienteId">
                                        <option value="">Seleccione paciente</option>
                                    </select>
                                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="OdontologoId" class="form-label">
                                        <i class="fas fa-user-md me-2"></i>Odontólogo
                                    </label>
                                    <select asp-for="OdontologoId" class="form-select" asp-items="ViewBag.OdontologoId">
                                        <option value="">Seleccione odontólogo</option>
                                    </select>
                                    <span asp-validation-for="OdontologoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}