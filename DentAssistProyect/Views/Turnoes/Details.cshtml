@model DentAssistProyect.Models.Entities.Turno

@{
    ViewData["Title"] = "Detalles del Turno";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 text-white"><i class="fas fa-calendar-alt me-2"></i>Detalles del Turno</h4>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="w-25 bg-light"><i class="far fa-clock me-2"></i>Fecha y Hora</th>
                                    <td>@Model.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fas fa-stopwatch me-2"></i>Duración</th>
                                    <td>@Model.DuracionMinutos minutos</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fas fa-info-circle me-2"></i>Estado</th>
                                    <td>@Html.DisplayFor(model => model.Estado)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fas fa-user-injured me-2"></i>Paciente</th>
                                    <td>@Model.Paciente.Nombre (@Model.Paciente.Rut)</td>
                                </tr>
                                <tr>
                                    <th class="bg-light"><i class="fas fa-user-md me-2"></i>Odontólogo</th>
                                    <td>@Model.Odontologo.Nombre (Mat. @Model.Odontologo.Matricula)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>